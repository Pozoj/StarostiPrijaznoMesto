/[if lt IE 7] <html class="no-js ie6 oldie" lang="en">
/[if IE 7] <html class="no-js ie7 oldie" lang="en">
/[if IE 8] <html class="no-js ie8 oldie" lang="en">
<!--[if (gt IE 8)]><html lang="en" class="no-js"><![endif]-->

%head
  %meta{:charset => "utf-8"}
  %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
  %title= yield(:title).empty?? "Starosti prijazno mesto" : yield(:title)
  %meta{:author => "Koda: Ljubomir Marković, Oblika: Jernej Gračner, za podjetje Pozoj d.o.o."}
  %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}
  %link{:href => 'http://fonts.googleapis.com/css?family=Droid+Sans:400,700', :rel => 'stylesheet', :type => 'text/css'}
  %link{:href => 'http://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic', :rel => 'stylesheet', :type => 'text/css'}
  %link{:rel => "shortcut icon", :href => "favicon.ico"}
  %link{:rel => "apple-touch-icon", :href => "apple-touch-icon.png"}
  %link{:rel => "apple-touch-icon", :sizes =>"72x72", :href => "apple-touch-icon-72x72.png"}
  %link{:rel => "apple-touch-icon", :sizes => "114x114", :href => "apple-touch-icon-114x114.png"}

  = stylesheet_link_tag "application"
  = javascript_include_tag "application"
  = csrf_meta_tags

%body{body_attrs}
  - unless user_signed_in?
    = link_to "", new_user_session_path, :id => "login"
  #head_bg  
    = render "common/header"
  #navi_bg
    = render "common/navigation"
  #main_bg
    .container
      .sixteen.columns
        = render "common/signed_in_nav"
        = render "common/flash", :flash => flash
        = yield
  #footer_bg
    = render "common/footer"
</html>
