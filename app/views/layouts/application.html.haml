%head
  %meta{:charset => "utf-8"}
  %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
  %title= yield(:title).empty?? "Starosti prijazno mesto" : yield(:title)
  %meta{:author => "Koda: Ljubomir Marković, Oblika: Jernej Gračner, za podjetje Pozoj d.o.o."}

  %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}
  = stylesheet_link_tag "application"
  = javascript_include_tag "application"
  = csrf_meta_tags

%body{body_attrs}
  #container
    #header-container
      = render "common/header"
    %br.clear
    
    #main
      = render "common/flash", :flash => flash
      = render "common/signed_in_nav"
      = yield
    %br.clear
    
    %footer
      = render "common/footer"
    %br.clear
    
</html>
