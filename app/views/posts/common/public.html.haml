    %thead
      %tr
        %th= sortable("posts_date",  "Datum vprašanja")
        %th= sortable("answers_date", "Datum odgovora")
        %th= sortable("posts_tag_group_id", "Področje")
        %th= sortable("posts_title",  @post_kind_title)
        %th= sortable("senders_name", "Poslal")
        %th= sortable("institutions_name", "Odgovoril")
    %tbody
      - for post in @posts
        %tr
