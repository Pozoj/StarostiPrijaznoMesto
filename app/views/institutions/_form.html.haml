= simple_form_for resource do |f|
  = f.input :name
  = f.input :short_name
  = f.input :description
  = f.input :tasks
  = f.input :address
  = f.association :post_office
  = f.input :phone
  = f.input :fax
  = f.input :website
  - if resource.id.nil?
    = f.input :visible, :as => :radio, :collection => Visible.all, :checked => Visible.invisible
  - else
    = f.input :visible, :as => :radio, :collection => Visible.all
  = f.submit